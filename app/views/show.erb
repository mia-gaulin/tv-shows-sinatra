<h1><%= @show.title %></h1>

<dl>
  <dt>Network:</dt>
  <dd><%= @show.network %></dd>
  <dt>Years:</dt>
  <dd><%= @show.starting_year %> -
    <% if @show.ending_year.nil? %>
    Present
    <% else %>
    <%= @show.ending_year %>
    <% end %></dd>
  <dt>Genre:</dt>
  <dd><%= @show.genre %></dd>
</dl>

<p><%= @show.synopsis %></p>

